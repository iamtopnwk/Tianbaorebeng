<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1a7f92">

    <!-- Row1 Column1 -->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:src="@drawable/ic_title" >
    </ImageView>

    <EditText
        android:id="@+id/editTextLoginUser"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/editTextLoginPwd"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_loginuser"
        android:ems="12"
        android:hint=""
        android:inputType="text" >

    </EditText>

    <EditText
          android:layout_below="@+id/editTextLoginUser"
        android:id="@+id/editTextLoginPwd"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_loginpwd"
        android:ems="10"
        android:inputType="textPassword" >
    </EditText>

    <!-- Row4 Column1 -->

    <ImageView
        android:layout_below="@+id/editTextLoginPwd"
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="5dp"
        android:onClick="getSigninPage"
        android:src="@drawable/ic_loginbutton" />

</RelativeLayout>