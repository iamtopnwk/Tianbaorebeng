<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="500dp"
    android:background="#1a7f92"
    android:scrollbars="vertical" >

    <ImageView
        android:id="@+id/testimage1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:src="@drawable/ic_top" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/testimage1"
        android:layout_marginLeft="17dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/DeviceName"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/ModuleNumber1"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/BeginDate"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/UserName"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/UserIphone"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/UserMail"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/UserAddress"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/Remark"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/linearLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextshape" />

        <TextView
            android:id="@+id/moduleNumberTbDevice"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextshape" />

        <TextView
            android:id="@+id/beginDate"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextshape" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextshape" />

        <TextView
            android:id="@+id/userIphone"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextshape" />

        <TextView
            android:id="@+id/userMail"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextshape" />

        <TextView
            android:id="@+id/userAddress"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextshape" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextshape1" />
    </LinearLayout>

</RelativeLayout>